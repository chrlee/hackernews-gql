{
  "name": "hackernews_gql",
  "version": "0.1.0",
  "description": "Hackernews API converted to GraphQL",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "bun build --target bun src/server.ts --minify --compile",
    "start": "bunx public/server.js",
    "dev": "bunx --hot src/server.ts",
    "clean": "rm -rf node_modules && rm -rf build && rm bun.lockb",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "author": {
    "name": "chrlee",
    "email": "christianjslee@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bun": "^1.1.9",
    "bun-types": "^1.1.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dataloader": "^2.2.2",
    "firebase": "10.5.0",
    "graphql": "^16.8.1",
    "graphql-yoga": "4.0.5",
    "nexus": "^1.3.0",
    "vercel": "latest"
  }
}
