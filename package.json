{
  "name": "hackernews_gql",
  "version": "0.1.0",
  "description": "Hackernews API converted to GraphQL",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "bun build --target bun ./src/server.ts --outfile=server.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.json",
    "start": "bunx server.js",
    "dev": "bunx --hot src/server.ts",
    "clean": "rm -rf node_modules && rm -rf build"
  },
  "author": {
    "name": "chrlee",
    "email": "christianjslee@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.18.58",
    "add": "^2.0.6",
    "bun": "^1.0.6",
    "bun-types": "^1.0.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dataloader": "^2.2.2",
    "firebase": "^9.23.0",
    "graphql": "^16.8.1",
    "graphql-yoga": "4.0.5",
    "nexus": "^1.3.0"
  }
}